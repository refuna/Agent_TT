# MCP News Agent Environment Configuration Template
# Copy this file to .env and fill in your actual API keys
# DO NOT commit .env file to version control

# News APIs
NEWSAPI_KEY=your_newsapi_key_here
RSS_FEEDS_ENABLED=true

# AI Services
OPENAI_API_KEY=your_openai_api_key_here
STABILITY_AI_KEY=your_stability_ai_key_here

# Translation Services
BAIDU_APP_ID=your_baidu_app_id_here
BAIDU_SECRET_KEY=your_baidu_secret_key_here
GOOGLE_TRANSLATE_KEY=your_google_translate_key_here

# Feishu Integration
FEISHU_APP_ID=your_feishu_app_id_here
FEISHU_APP_SECRET=your_feishu_app_secret_here
FEISHU_BOT_TOKEN=your_feishu_bot_token_here

# Cloud Storage
QINIU_ACCESS_KEY=your_qiniu_access_key_here
QINIU_SECRET_KEY=your_qiniu_secret_key_here
QINIU_BUCKET=qiuzhi-assistant
QINIU_DOMAIN=your_qiniu_domain_here

ALIYUN_ACCESS_KEY_ID=your_aliyun_access_key_id_here
ALIYUN_ACCESS_KEY_SECRET=your_aliyun_access_key_secret_here
ALIYUN_OSS_BUCKET=qiuzhi-files
ALIYUN_OSS_ENDPOINT=your_oss_endpoint_here

# Notification Services
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_email_password_here
EMAIL_USE_TLS=true

SMS_ACCESS_KEY_ID=your_sms_access_key_here
SMS_ACCESS_KEY_SECRET=your_sms_secret_here
SMS_SIGN_NAME=秋芝助理

# Security Settings
ENCRYPTION_KEY=your_32_character_encryption_key_here
JWT_SECRET=your_jwt_secret_key_here
API_KEY_SALT=your_api_key_salt_here

# MCP Server Configuration
MCP_SERVER_PORT=3000
MCP_SERVER_HOST=localhost
MCP_ENABLE_CORS=true
MCP_RATE_LIMIT_ENABLED=true
MCP_RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Development Settings
NODE_ENV=production
DEBUG_MODE=false
LOG_LEVEL=info
ENABLE_METRICS=true

# Health Check Configuration
HEALTH_CHECK_INTERVAL=300000
HEALTH_CHECK_TIMEOUT=30000
HEALTH_CHECK_ENABLED=true